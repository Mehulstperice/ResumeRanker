<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Dashboard - ResumeRanker</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        background: linear-gradient(135deg, #e0c3fc 0%, #8ec5fc 100%);
        min-height: 100vh;
        margin: 0;
        padding-top: 0px;
        font-family: "Segoe UI", sans-serif;
      }

      .container {
        max-width: 850px;
      }

      .upload-card,
      .results-card {
        background-color: white;
        border-radius: 15px;
        padding: 2rem;
        margin-bottom: 2rem;
        box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
      }

      .btn-primary {
        background-color: #6c63ff;
        border-color: #6c63ff;
        transition: 0.3s ease-in-out;
      }

      .btn-primary:hover {
        background-color: #594ae2;
        border-color: #594ae2;
      }

      .form-control:focus {
        box-shadow: none;
        border-color: #6c63ff;
      }

      .result-list .list-group-item {
        transition: 0.2s ease;
      }

      .result-list .list-group-item:hover {
        background-color: #f8f9fa;
      }
    </style>
  </head>
  <body>
    <%- include("partials/navbar") %>

    <div class="container">
      <!-- Upload Form -->
      <div class="upload-card">
        <h2 class="text-center mb-4">Upload Resume</h2>

        <form method="POST" action="/resume/upload" enctype="multipart/form-data">
          <div class="mb-3">
            <label class="form-label">Job Description</label>
            <textarea
              name="jobDesc"
              class="form-control"
              rows="5"
              placeholder="Paste job description here"
              required
            ></textarea>
          </div>

          <div class="mb-3">
            <label class="form-label">Resume File</label>
            <input type="file" name="resume" class="form-control" required />
          </div>

          <button type="submit" class="btn btn-primary w-100">
            Analyze Resume
          </button>
        </form>
      </div>

      <!-- Previous Results -->
      <div class="results-card">
        <h4 class="mb-4">Previous Results</h4>
        <ul class="list-group result-list">
          <% resumes.forEach(r => { %>
            <li class="list-group-item d-flex justify-content-between align-items-center">
              <a href="/resume/result/<%= r._id %>" class="text-decoration-none"><%= r.filename %></a>
              <span class="badge bg-success rounded-pill"><%= r.score %>%</span>
            </li>
          <% }) %>
        </ul>
      </div>
    </div>
  </body>
</html>
